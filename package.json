{
  "name": "playwright-sandbox",
  "version": "1.0.0",
  "description": "Sandbox for test automation via Playwright tool",
  "main": "index.js",
  "scripts": {
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "report": "npx playwright show-report",
    "test": "npx playwright test",
    "verify": "npm run lint && npm run format:check"
  },
  "author": "Aliaksandr Yeutushkou <aliaksandr.yeutushkou@gmail.com>",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2"
  }
}
